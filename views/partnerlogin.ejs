<%- include("./partials/header") %>


<div class="container-fluid">
    <div class="row loginsm">
      <div class="col-sm-12 col-md-6 col-xs-12 login-section-wrapper">
        <div class="login-wrapper my-auto">
          <h1 class="login-title">LogIn as a Restaurant</h1>
          <form action="/partnerlogin" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="username" id="email" class="form-control" placeholder="email@example.com" required>
            </div>
            <div class="form-group mb-4">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control" placeholder="enter your passsword" required>
            </div>
            <button type="submit" class="btn btn-block btn-lg aboutbtn my-2">Login</button>
          </form>
          <a href="#!" class="forgot-password-link">Forgot password?</a>
          <p class="login-wrapper-footer-text">Don't have an account? <a href="/partnersignup" class="text-reset">Register here</a></p>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-md-block">
        <img src="https://images.pexels.com/photos/3184423/pexels-photo-3184423.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"   alt="login image" class="login-img">
      </div>
    </div>
  </div>

<%- include("./partials/footer") %>