  </head>
    <section id="top">
        <div class="container-fluid">
        <nav class="navbar navbar-expand-lg">
          <a class="navbar-brand" href="/">FoodShala</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span id="threedot" class="navbar-toggler-icon"></span>
            </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
    <%   if (!currentUser) {   %>
      <li class="nav-item">
        <a class="nav-link" href="/login">LOGIN</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/signup">SIGN UP</a>
      </li>
      <li class="nav-item">
    <a class="nav-link" href="/about">About Us</a>
      </li>
      <%  } else if(currentUser.partner == true) { %>
          <div class="dropdown">
            <li class="nav-item dropbtn">
              <a class="nav-link" href="#"> Partner <i class="fas fa-utensils"></i> <%= currentUser.name %> </a>
            </li>
            <div class="dropdown-content">
              <a href="/vieworders">New Orders</a>
              <a href="/Previousorders">Previous Orders</a>
              <a href="/additems">Add Items</a>
              <a href="/restaurantitems">My Items</a>
              <a href="/profileupdate">Edit Profile</a>
            </div>
            </div>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
       <% } else { %>
        <div class="dropdown">
        <li class="nav-item dropbtn">
          <a class="nav-link" href="#"><i class="fa fa-user mx-1"></i><%= currentUser.name %> </a>
        </li>
        <div class="dropdown-content">
          <a href="/myCart">My Cart</a>
          <a href="/myOrders">My Orders</a>
          <a href="/profileupdate">Edit Profile</a>
        </div>
        </div>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Log Out</a>
        </li>
      <%  }  %>
            </ul>
          </div>
        </nav>
        </div>
    </section>
  
