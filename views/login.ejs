<%- include("./partials/header") %>

<div>
    <div class="row loginsm">
      <div class="col-sm-12 col-md-6 col-xs-12  login-section-wrapper">
        <div class="login-wrapper my-auto">
          <% if(message && message.length > 0){  %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong><p style="margin-bottom: -0.1rem;"><%=message%></p></strong>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>
          <h1 class="login-title">Log in</h1>
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="username" id="email" class="form-control" required>
            </div>
            <div class="form-group mb-4">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-block btn-lg aboutbtn my-2">Login</button>
          </form>
          <a href="#!" class="forgot-password-link">Forgot password?</a>
          <p class="login-wrapper-footer-text">Don't have an account? <a href="/signup" class="text-reset">Register here</a></p>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-md-block">
        <img src="/assets/first.jpg"   alt="login image" class="login-img">
      </div>
    </div>
  </div>


<%- include("./partials/footer") %>
