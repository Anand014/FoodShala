<%- include("./partials/header") %>


<div class="">
    <div class="row loginsm" style="margin-bottom: -3rem;">
      <div class="col-sm-12 col-md-6 col-xs-12 login-section-wrapper">
        <div class="login-wrapper my-auto">
          <h1 class="login-title">Sign Up</h1>
          <form action="/signup" method="POST">
            <div class="form-group">
                <label for="text">Full Name</label>
                <input type="text" name="name" id="text" class="form-control" placeholder="Kumar Anand" required>
              <label for="email">Email</label>
              <input type="email" name="username" id="email" class="form-control" placeholder="email@example.com" required>
              <label for="text">Address</label>
                <input type="text" name="address" id="text" class="form-control" placeholder="51 Area, colony 6, Near S.K Hospital " required>
            </div>
            <label for="tel">Phone Number</label>
                <input type="tel" name="phone" id="text" class="form-control" placeholder="9898989899" required>
                <div class="form-group mt-3">
                  <label for="flavours">Preference:</label>
                  <select id="flavours" name="category">
                    <option value="veg">Vegetarian</option>
                    <option value="nonveg">non-Vegetarian</option>
                  </select>
              </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control" placeholder="enter your passsword" required>
            </div>
            <button type="submit" class="btn btn-block btn-lg aboutbtn my-2">Signup</button>
          </form>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-md-block">
        <img src="/assets/second.jpg"   alt="Signup image" class="signup-img">
      </div>
      </div>
    </div>


<%- include("./partials/footer") %>