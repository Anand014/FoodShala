<%- include("./partials/header") %>

<div >
    <img class="homeimg" src="/assets/youritems.jpg" alt="" srcset="">
</div>
<div class="container my-5">
    <h1>Your Menu</h1>
</div>
<div class="container">
    <div class="row" >
    <% foods.forEach(food => {  %>
        <div class="col-lg-4 col-md-6 col-sm-12 ">
            <div class="card mb-2">
                <div class="header">
                    <img alt="Food image cap" class="card-img-top img-fluid" src= "<%= food.image %>" />
                </div>
                <div class="body m-1">
            <% if(food.category == 'veg') { %>
                        <h3><%= food.name %><i style="color: green;" class="far fa-dot-circle"></i> </h3>
                  <%  } else { %>
                        <h3><%= food.name %><i style="color: red;" class="far fa-dot-circle"></i></h3>
               <%     }  %> 
                    <p style="margin-top: -0.5rem;">Ingredients -<%= food.description %></p>
                    <p style="margin-top: -1rem;"> <strong>Price - ₹<%= food.price %></strong></p>
                  </div>
                <div>
                    <a href="/restaurantitems/<%=food.id%>" class="btn btn-block btn-lg aboutbtn2" style="border-radius: 0px; margin-top: 0%;">Delete This Food</a>
                </div>
            </div>
        </div>
<%  }); %>
    </div>
    </div>

    <div class="container mt-5">
        <nav aria-label="Page navigation">
            <% if (pages && pages > 0) { %>
            <ul class="pagination justify-content-center">
              <% if (current == 1) { %>
              <li class="page-item active"><a class="page-link">First</a></li>
              <% } else { %>
              <li><a class="page-link" href="/cuisine">First</a></li>
              <% } %> <% if (current == 1) { %>
              <li class="page-item disabled"><a class="page-link">«</a></li>
              <% } else { %>
              <li>
                <a
                  class="page-link"
                  href="/restaurantitems?page=<%= Number(current) - 1 %>"
                  >«</a
                >
              </li>
              <% } %> <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <%
              if (i !== 1) { %>
              <li class="page-item disabled"><a class="page-link">...</a></li>
              <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %> <%
              if (i == current) { %>
              <li class="page-item active"><a class="page-link"><%= i %></a></li>
              <% } else { %>
              <li>
                <a
                  class="page-link"
                  href="/restaurantitems?page=<%= i %>"
                  ><%= i %></a
                >
              </li>
              <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
              <li class="page-item disabled"><a class="page-link">...</a></li>
              <% } %> <% } %> <% if (current == pages) { %>
              <li class="page-item disabled"><a class="page-link">»</a></li>
              <% } else { %>
              <li>
                <a
                  class="page-link"
                  href="/restaurantitems?page=<%= Number(current) + 1 %>"
                  >»</a
                >
              </li>
              <% } %> <% if (current == pages) { %>
              <li class="page-item active"><a class="page-link">Last</a></li>
              <% } else { %>
              <li>
                <a
                  class="page-link"
                  href="/restaurantitems?page=<%= pages %>"
                  >Last</a
                >
              </li>
              <% } %>
            </ul>
            <% } %>
          </nav>
    </div>
    


<%- include("./partials/footer") %>